@model PetMe.ViewModels.UserProfileViewModel
@{
    ViewBag.Title = "Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Minhas Informações</h2>

@using (Html.BeginForm("SaveUser", "Profile"))
{
    <div class="form-group">
        @Html.LabelFor(u => u.UserName)
        @Html.TextBoxFor(u => u.UserName, new { @class = "form-control", @disabled = true })
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.Email)
        @Html.TextBoxFor(u => u.Email, new { @class = "form-control", @disabled = true })
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.FirstName)
        @Html.TextBoxFor(u => u.FirstName, new { @class = "form-control" })
        @Html.ValidationMessageFor(u => u.FirstName)
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.Surname)
        @Html.TextBoxFor(u => u.Surname, new { @class = "form-control" })
        @Html.ValidationMessageFor(u => u.Surname)
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.Birthdate)
        @Html.TextBoxFor(u => u.Birthdate, new { @class = "form-control", @type = "Date" })
        @Html.ValidationMessageFor(u => u.Birthdate)
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.GenderId)
        @Html.DropDownListFor(u => u.GenderId, new SelectList(Model.Gender, "Id", "Name"), "Selecione o Gênero", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.DocumentNumber)
        @Html.TextBoxFor(u => u.DocumentNumber, new { @class = "form-control" })
        @Html.ValidationMessageFor(u => u.DocumentNumber)
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.ZipCode)
        @Html.TextBoxFor(u => u.ZipCode, new { @class = "form-control" })
        @Html.ValidationMessageFor(u => u.ZipCode)
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.Address)
        @Html.TextBoxFor(u => u.Address, new { @class = "form-control" })
        @Html.ValidationMessageFor(u => u.Address)
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.AddressNumber)
        @Html.TextBoxFor(u => u.AddressNumber, new { @class = "form-control" })
        @Html.ValidationMessageFor(u => u.AddressNumber)
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.AddressComplement)
        @Html.TextBoxFor(u => u.AddressComplement, new { @class = "form-control" })
        @Html.ValidationMessageFor(u => u.AddressComplement)
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.District)
        @Html.TextBoxFor(u => u.District, new { @class = "form-control" })
        @Html.ValidationMessageFor(u => u.District)
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.County)
        @Html.TextBoxFor(u => u.County, new { @class = "form-control" })
        @Html.ValidationMessageFor(u => u.County)
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.State)
        @Html.TextBoxFor(u => u.State, new { @class = "form-control" })
        @Html.ValidationMessageFor(u => u.State)
    </div>
    @Html.HiddenFor(u => u.Id)
    //@Html.AntiForgeryToken();
    <button class="btn btn-primary">Salvar</button>
}

