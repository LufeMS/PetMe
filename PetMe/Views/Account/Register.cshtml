@model PetMe.Models.RegisterViewModel
@{
    ViewBag.Title = "Registre-se";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", @style = "margin-left: 20%; margin-right: 20%; margin-top: 7%; text-align:center" }))
{
    @Html.AntiForgeryToken()
    <h1 style="padding-bottom: 1rem;">PetMe - Logo</h1>
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group" style="margin-left: 30%; margin-right: 30%">
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "E-mail" })
    </div>
    <div class="form-group" style="margin-left: 30%; margin-right: 30%">
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Nome de usuário" })
    </div>
    <div class="form-group" style="margin-left: 30%; margin-right: 30%">
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Senha" })
    </div>
    <div class="form-group" style="margin-left: 30%; margin-right: 30%">
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirmar senha" })
    </div>
    <div class="form-group" style="margin-left: 30%; margin-right: 30%">
        <input type="submit" class="btn btn-default" value="Registrar-se" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
