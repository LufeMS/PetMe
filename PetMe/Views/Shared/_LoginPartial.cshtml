@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="navbar-nav">
            <li class="nav-item dropdown ">
                <a class="nav-link dropdown-toggle" href="#" id="perfilDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Olá, @User.Identity.GetUserName()!
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="perfilDropdown">
                    <a class="dropdown-item" href="@Url.Action("MyProfile", "Profile")">Meu Perfil</a>
                    <a class="dropdown-item" href="@Url.Action("PetOwnerList", "Pets")">Meus Pets</a>
                    <a class="dropdown-item" href="@Url.Action("MyAdoptions", "Adoptions")">Minhas Adoções</a>
                    <a class="dropdown-item" href="javascript:document.getElementById('logoutForm').submit()">Sair</a>
                </div>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Entrar", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn btn-outline-success-nav nav-link my-2 my-sm-0" })</li>
        <li>@Html.ActionLink("Registre-se", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "btn btn-outline-success-nav nav-link my-2 my-sm-0", @style = "margin-left: 8px" })</li>
    </ul>
}
