<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-black bg-black">
        <a class="navbar-brand a-yellow" href="#">PetMe</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link a-yellow" href="@Url.Action("Index", "Home")">
                        Home
                        <span class="sr-only">(current)</span>
                    </a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link a-yellow dropdown-toggle" href="#" id="petsDropdown" role="button" data-toggle="dropdown" aria-haspopup="true"
                       aria-expanded="false">
                        Pets
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <div class="dropdown-content">
                            <a class="dropdown-item" href="@Url.Action("PetForm", "Pets")">Anunciar</a>
                            <a class="dropdown-item" href="@Url.Action("PetList", "Pets")">Adotar</a>
                        </div>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link a-yellow dropdown-toggle" href="#" id="organizationDropdown" role="button" data-toggle="dropdown" aria-haspopup="true"
                       aria-expanded="false">
                        Organização
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="@Url.Action("About", "Home")">Sobre</a>
                        <a class="dropdown-item" href="@Url.Action("Contact", "Home")">Contato</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Contribua com o Site</a>
                        <a class="dropdown-item" href="#">Seja um Parceiro</a>
                    </div>
                </li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>
    <div class="content">
        @RenderBody()
    </div>
    <footer class="text-muted text-center text-small">
        <div class="container">
            <p class="mb-1">&copy;2018 Petme</p>
            <ul class="list-inline">
                <li class="list-inline-item">
                    <a href="#">Politica de Privacidade</a>
                </li>
                <li class="list-inline-item">
                    <a href="#">Termos de uso</a>
                </li>
            </ul>
        </div>
    </footer>
    @Scripts.Render("~/bundles/scripts")
    @RenderSection("scripts", required: false)
</body>
