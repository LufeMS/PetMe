@model PetMe.ViewModels.PetFormViewModel
@{
                /**/

                ViewBag.Title = "PetForm";
                Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>PetForm</h2>

@using (Html.BeginForm("SalvarPet", "Pets"))
{
    <div class="form-group">
        @Html.LabelFor(p => p.Name)
        @Html.TextBoxFor(p => p.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.AgeInMonths)
        @Html.TextBoxFor(p => p.AgeInMonths, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.AgeInMonths)
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.PetTypeId)
        @Html.DropDownListFor(p => p.PetTypeId, new SelectList(Model.PetTypes, "Id", "Name"), "Selecione o tipo de animal", new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.PetTypeId)
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.PetBreedTypeId)
        @Html.DropDownListFor(p => p.PetBreedTypeId, new SelectList(Model.PetBreedTypes, "Id", "Name"), "Selecione o tipo de raça", new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.PetBreedTypeId)
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.BreedDetail)
        @Html.TextBoxFor(p => p.BreedDetail, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Color)
        @Html.TextBoxFor(p => p.Color, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.Color)
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.PetSizeId)
        @Html.DropDownListFor(p => p.PetSizeId, new SelectList(Model.PetSizes, "Id", "Name"), "Selecione o porte do pet", new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.PetSizeId)
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.PetGenderId)
        @Html.DropDownListFor(p => p.PetGenderId, new SelectList(Model.PetGenders, "Id", "Name"), "Selecione o sexo do pet", new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.PetGenderId)
    </div>
    <div class="custom-checkbox">
        <label>
            @Html.CheckBoxFor(p => p.Vaccinated) Vacinado?
        </label>
    </div>
    <div class="custom-checkbox">
        <label>
            @Html.CheckBoxFor(p => p.Castrated) Castrado?
        </label>
    </div>
    <div class="custom-checkbox">
        <label>
            @Html.CheckBoxFor(p => p.Trained) Adestrado?
        </label>
    </div>
    <div class="custom-checkbox">
        <label>
            @Html.CheckBoxFor(p => p.SpecialCare) Cuidados Especiais?
        </label>
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.DetailsSCare)
        @Html.TextAreaFor(p => p.DetailsSCare, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.DetailsSCare)
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Description)
        @Html.TextAreaFor(p => p.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.Description)
    </div>
    <div class="custom-checkbox">
        <label>
            @Html.CheckBoxFor(p => p.LivesWithOwner) Vive no mesmo endereço que o dono?
        </label>
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.ZipCode)
        @Html.TextAreaFor(p => p.ZipCode, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.ZipCode)
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Address)
        @Html.TextAreaFor(p => p.Address, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.Address)
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.AddressNumber)
        @Html.TextAreaFor(p => p.AddressNumber, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.AddressNumber)
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.AddressComplement)
        @Html.TextAreaFor(p => p.AddressComplement, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.CountyView)
        @Html.TextAreaFor(p => p.CountyView, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.CountyView)
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.StateView)
        @Html.TextAreaFor(p => p.StateView, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.StateView)
    </div>
    @*@Html.AntiForgeryToken()*@
    @Html.HiddenFor(p => p.Id)
    @Html.HiddenFor(p => p.OwnerId)
    <button class="btn btn-primary" type="submit">Salvar</button>

    @*@if(Model.Id != 0) {
            <button id="js-delete" data-pet-id="@Model.Id" class="btn btn-secondary">Excluir</button>
        }*@
}

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#pet-form").on("click", "#js-delete", function () {
                var button = $(this);

                bootbox.confirm("Deseja mesmo excluir esse pet?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/pets/" + button.attr("data-pet-id"),
                            method: "DELETE",
                            succes: function () {
                                toastr.success("Rentals sucessfully recorded!");
                            },
                            complete: function (data) {
                                window.location.href = "@Url.Action("PetList", "Panel")"
                            }
                        });
                    }
                })
            });
        });
    </script>
}



