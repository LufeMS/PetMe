@model PetMe.ViewModels.PetInfoViewModel
@{
    ViewBag.Title = "Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row mt-4 mb-2">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb" style="background-color: #0effab!important;">
                    <li class="breadcrumb-item">
                        <a class="a-nav" href="/">Inicio</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a class="a-nav" href="category.html">Adotar um Pet</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Pet</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <!-- Image -->
        <div class="col-12 col-lg-6">
            <div class="card bg-light mb-2">
                <div class="card-body">
                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100 img-fluid" src="img/procura1.jpg" alt="Second slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="img/blank-profile-picture.png" alt="Second slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="img/procura1.jpg" alt="Third slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="img/blank-profile-picture.png" alt="Third slide">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Add to cart -->
        <div class="col-md-6">
            <div class="card bg-light mb-3">
                <div class="card-header nav-green text-white">
                    <p class="m-0">
                        <strong>
                            <span class="text-uppercase">@Model.PetInfo.Name</span> (@Model.PetInfo.PetType.Name)
                        </strong>
                    </p>
                </div>
                <div class="card-body">
                    <div class="form-group row ml-4">
                        <div class="col-4 ">
                            <label for="petAge" class="col-form-label">
                                <strong>Idade</strong>
                            </label>
                            @if (Model.PetInfo.AgeInMonths > 12)
                            {
                                var anos = Model.PetInfo.AgeInMonths / 12;
                                <input type="text" readonly class="form-control-plaintext p-0" id="petAge" value="@anos ano(s)">
                            }
                            else
                            {
                                <input type="text" readonly class="form-control-plaintext p-0" id="petAge" value="@Model.PetInfo.AgeInMonths meses">
                            }
                        </div>
                        <div class="col-4">
                            <label for="petColor" class="col-form-label">
                                <strong>Cor</strong>
                            </label>
                            <input type="text" readonly class="form-control-plaintext p-0" id="petColor" value="@Model.PetInfo.Color">
                        </div>
                        <div class="col-4">
                            <label for="petRace" class="col-form-label">
                                <strong>Raça</strong>
                            </label>
                            <input type="text" readonly class="form-control-plaintext p-0" id="petRace" value="@Model.PetInfo.PetBreedType.Name">
                        </div>
                        <div class="col-4">
                            <label for="petSize" class="col-form-label">
                                <strong>Porte</strong>
                            </label>
                            <input type="text" readonly class="form-control-plaintext p-0" id="petSize" value="@Model.PetInfo.PetSize.Name">
                        </div>
                        <div class="col-4">
                            <label for="petGender" class="col-form-label">
                                <strong>Sexo</strong>
                            </label>
                            <input type="text" readonly class="form-control-plaintext p-0" id="petGender" value="@Model.PetInfo.PetGender.Name">
                        </div>
                        <div class="col-4">
                            <label for="petAddress" class="col-form-label">
                                <strong>Região</strong>
                            </label>
                            <input type="text" readonly class="form-control-plaintext p-0" id="petAddress" value="@Model.PetInfo.County.Name">
                        </div>
                    </div>
                    <div class="col-12 row mt-4 ml-4">
                        <div class="col-6 mb-3">
                            @if (Model.PetInfo.Vaccinated)
                            {
                                <input type="checkbox" class="form-check-input" id="CheckVacinado" checked disabled>
                            }
                            else
                            {
                                <input type="checkbox" class="form-check-input" id="CheckVacinado" disabled>
                            }
                            <label class="form-check-label" for="CheckVacinado">Vacinado</label>
                        </div>
                        <div class="col-6 mb-3">
                            @if (Model.PetInfo.Castrated)
                            {
                                <input type="checkbox" class="form-check-input" id="CheckCastrado" checked disabled>
                            }
                            else
                            {
                                <input type="checkbox" class="form-check-input" id="CheckCastrado" disabled>
                            }
                            <label class="form-check-label" for="CheckCastrado">Castrado</label>
                        </div>
                        <div class="col-6 mb-3">
                            @if (Model.PetInfo.Trained)
                            {
                                <input type="checkbox" class="form-check-input" id="CheckAdestrado" checked disabled>
                            }
                            else
                            {
                                <input type="checkbox" class="form-check-input" id="CheckAdestrado" disabled>
                            }
                            <label class="form-check-label" for="CheckAdestrado">Adestrado</label>
                        </div>
                        <div class="col-6 mb-3">
                            @if (Model.PetInfo.SpecialCare)
                            {
                                <input type="checkbox" class="form-check-input" id="CheckCuidadosEspeciais" checked disabled>
                            }
                            else
                            {
                                <input type="checkbox" class="form-check-input" id="CheckCuidadosEspeciais" disabled>
                            }
                            <label class="form-check-label" for="CheckCuidadosEspeciais">Cuidados Especiais</label>
                        </div>
                    </div>
                    <a href="#" data-toggle="modal" data-target="#modalMensagem" class="btn button-green btn-lg btn-block text-uppercase">
                        <i class="fas fa-paw"></i> Adotar
                    </a>
                    <a href="@Url.Action("ReportPet","Pets", new { id = Model.PetInfo.Id})" class="btn button-red btn-lg btn-block text-uppercase">
                        <i class="fas fa-user-slash"></i> Reportar Anúncio
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        @if (Model.PetInfo.Description.Length > 0)
        {
            <!-- Description -->
            <div class="col-12">
                <div class="card border-light mb-3">
                    <div class="card-header nav-green text-white text-uppercase">
                        <i class="fa fa-align-justify"></i> Description
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            @Model.PetInfo.Description
                        </p>
                    </div>
                </div>
            </div>
        }

        @if (Model.PetInfo.SpecialCare && Model.PetInfo.DetailsSCare.Length > 0)
        {
            <div class="col-12">
                <div class="card border-light mb-3">
                    <div class="card-header nav-green text-white text-uppercase">
                        <i class="fa fa-align-justify"></i> Cuidados Especiais
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            @Model.PetInfo.DetailsSCare
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="modal fade" id="modalMensagem" tabindex="-1" role="dialog" aria-labelledby="modalMensagemLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Mande uma mensagem para o dono</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                @using (Html.BeginForm("ConfirmAdoptionRequest", "Adoptions"))
                {
                    <div class="modal-body">
                        <textarea rows="4" class="form-control" id="text" name="text" placeholder="Olá, estou interessado em adotar seu pet..."></textarea>
                        <input id="SenderId" name="SenderId" type="hidden" value="@Model.UserInfo.Id">
                        <input id="ReceiverId" name="ReceiverId" type="hidden" value="@Model.OwnerInfo.Id">
                        <input id="AnimalId" name="AnimalId" type="hidden" value="@Model.PetInfo.Id">
                    </div>
                    <div class="modal-footer">
                        <a class="btn button-red" data-dismiss="modal">Cancelar</a>
                        <button type="submit" class="btn button-green">Enviar</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
